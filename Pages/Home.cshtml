@page
@model AgroConnect.Pages.HomeModel
@{
}
<style>
    .sidebar {
        min-height: 100vh;
    }

    .sidebar-icon {
        width: 20px;
        height: 20px;
        margin-right: 10px;
    }

    .main-content {
        padding: 20px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4 main-content">
            <!-- Cabeçalho do conteúdo principal -->
            <h1>Plantings</h1>

            <!-- Cards com dados -->
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Dados 1</h5>
                            <p class="card-text">Informações relevantes aqui.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Dados 2</h5>
                            <p class="card-text">Outras informações importantes.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Dados 3</h5>
                            <p class="card-text">Mais detalhes relevantes.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Botão de adicionar lavoura -->
            <button class="btn btn-primary mt-3">Adicionar Lavoura</button>

            <!-- Barra de pesquisa -->
            <div class="input-group mt-3">
                <input type="text" class="form-control" placeholder="Pesquisar...">
                <button class="btn btn-outline-secondary" type="button">Buscar</button>
            </div>

            <!-- Tabela -->
            <table class="table table-striped table-hover mt-3">
                <thead>
                    <tr>
                        <th>Crop</th>
                        <th>Planted Area</th>
                        <th>Planting Date</th>
                        <th>Harvest Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Preencha com os dados das lavouras -->
                    <tr>
                        <td>Soja</td>
                        <td>100 hectares</td>
                        <td>05/01/2024</td>
                        <td>05/05/2024</td>
                        <td>Colhido</td>
                    </tr>
                    <!-- Adicione mais linhas conforme necessário -->
                </tbody>
            </table>
        </main>
    </div>
</div>

